{
  "files.associations": {
    "*.scss": "postcss",
    "*.module.scss": "postcss"
  },
  "files.eol": "\n",
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "all",
  "[html]": {
    //"editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "ecsstractor_port.bem_nesting": true,
  "ecsstractor_port.brackets_newline_after": false,
  "terminal.integrated.automationShell.linux": "",
  "terminal.external.windowsExec": "C:\\Program Files\\Git\\git-bash.exe",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "editor.insertSpaces": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.addMissingImports": "explicit",
    "source.organizeImports": "never",
    "source.sortImports": "never"
  },
  "prettier.printWidth": 200,
  "vetur.grammar.customBlocks": {
    "docs": "md",
    "i18n": "json"
  },
  "json.maxItemsComputed": 50000,
  "editor.tabSize": 2,
  "git.autofetch": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.colorTheme": "Bearded Theme feat. Gold D Raynh",
  "todo-tree.general.showActivityBarBadge": true,

  //тут моё
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": true,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.scrollBeyondLastLine": true,
  "editor.snippetSuggestions": "top",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",

  // курсор
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  // левый столбец с номерами строк
  "editor.glyphMargin": false,
  "editor.fontSize": 20,
  "workbench.layoutControl.enabled": false,
  "editor.fontLigatures": true,
  //шрифты
  //"editor.fontFamily": "Consolas, 'Courier New', monospace",
  "editor.fontFamily": "Dank Mono, IBM Plex Mono",
  //"editor.inlayHints.fontFamily": "Pragmata Pro",
  "notebook.outputFontFamily": "Pragmata Pro",

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic (=FlottFlott)
          "comment",
          "entity.name.type.class", //class names
          "keyword", //import, export, return…
          "constant", //String, Number, Boolean…, this, super
          "storage.modifier", //static keyword
          "storage.type.class.js" //class keyword
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (VSCode has some defaults for italics)
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },

  //Terminal
  "terminal.integrated.fontFamily": "Iosevka NFM, IBM Plex Mono",
  "terminal.integrated.fontSize": 15,

  //Explorer
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,

  //Format
  "prettier.semi": true,
  "prettier.useTabs": false,
  "editor.formatOnSave": true,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": false
  },
  //Включите круглые скобки вокруг единственного параметра функции стрелки
  "prettier.arrowParens": "avoid",
  //"editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.packageManager": "yarn",
  "editor.inlineSuggest.enabled": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[postcss]": {},
  "bracket-pair-colorizer-2.depreciation-notice": false,
  "cSpell.language": "en,ru",
  "errorLens.excludePatterns": ["[\"**/*.{ts,js}\"]"],

  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.addMissingImports": true,
    "source.organizeImports": false,
    "source.sortImports": false
  },
  "git.openRepositoryInParentFolders": "never",

  "emmet.includeLanguages": {
    "php": "html"
  },
  "scssFormatter.printWidth": 50000,
  "prettier.useEditorConfig": false,

  //folderTemplates config
  "folderTemplates.structures": [
    {
      "name": "My Custom Template",
      "omitParentDirectory": true,
      "structure": [
        {
          "fileName": "<FTName>/types.ts"
        },
        {
          "fileName": "<FTName>/index.tsx",
          "template": "Typescript Functional Component"
        },
        {
          "fileName": "<FTName>/<FTName>.module.scss"
        }
      ]
    }
  ],
  "folderTemplates.fileTemplates": {
    "Typescript Functional Component": [
      "import React from 'react';",
      "import s from './<FTName>.module.scss';",
      "",
      "interface <FTName>Props {",
      "}",
      "",
      "const <FTName>: React.FC<<FTName>Props> = () => {",
      "  return <div/>;",
      "};",
      "",
      "export default <FTName>;"
    ]
  },
  "[typescript]": {}
}